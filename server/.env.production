# Production Environment Variables for FindPreschool Backend
# Copy this file to .env and fill in your actual values

# Node Environment
NODE_ENV=production

# Database Configuration
DB_HOST=your-mysql-host.com
DB_PORT=3306
DB_USER=your_database_user
DB_PASSWORD=your_secure_database_password
DB_NAME=findpreschool

# Server Configuration
PORT=5000
HOST=0.0.0.0

# JWT Authentication
JWT_SECRET=your-very-secure-random-string-with-at-least-32-characters-use-openssl-rand

# CORS Configuration (Frontend URL)
CORS_ORIGIN=https://yourdomain.com

# Google Maps API
GOOGLE_MAPS_API_KEY=your-google-maps-places-api-key

# Email Configuration (Optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@findpreschool.com

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Secret (for sessions, if using)
SESSION_SECRET=your-session-secret-string

# API Keys for Third-party Services
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
SENTRY_DSN=https://your-sentry-dsn@sentry.io/your-project-id
